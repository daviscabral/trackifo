%html
  %head
    %title Trackifo ~ Pivotal Tracker activity notifications through Notifo
    %link{:href => '/screen.css', :media => "screen", :rel => "stylesheet", :type => "text/css"}
    %link{:href => "/iphone-icon.png", :rel => "apple-touch-icon"}
  %body
    #wrapper
      #header
        %h1
          %a{:href => "/"} Trackifo
          - if session['user_id']
            %span
              (
              %a{:href => "/bye"} Logout
              )
        %p Pivotal Tracker activity notifications through Notifo.

      - if flash[:notice]
        .flash
          = flash[:notice]

      = yield
      .fix
